}

        
        .insta-container{
            border: 1px solid ;
            padding: 10px;


        }
        .usernameandchanneidformcointainer {
            display: flex;
        margin-right: 20px;
        height: auto;
        justify-content: center;
}
        

        .usernameandchanneidformcointainer form {
            background-color: #7f1e1e00;
        padding: 20px;
        border-radius: 0px;
        box-shadow: 0 20px 20px rgb(255 255 255 / 0%);
        text-align: center;
        }

        .usernameandchanneidformcointainer label,
        .usernameandchanneidformcointainer input,
        .usernameandchanneidformcointainer button {
            display: block;
            margin-bottom: 10px;
        }

        .usernameandchanneidformcointainer label {
            font-weight: bold;
        }

        .usernameandchanneidformcointainer input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #18c3b8;
            border-radius: 5px;
            font-size: 16px;
        }

        .usernameandchanneidformcointainer button[type="submit"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .usernameandchanneidformcointainer button[type="submit"]:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="main-container">
    <div class="usernameandchanneidformcointainer">
        <form method="POST" action="http://localhost:3000/dataobtain">
            <label for="instagramUsername">Instagram Channel Name:</label>
            <input type="text" id="instagramUsername" name="instagramUsername" required placeholder="Instagram @username">

            <label for="youtubeChannelId">YouTube Channel ID:</label>
            <input type="text" id="youtubeChannelId" name="youtubeChannelId" required placeholder="YouTube channel-id">
            <button type="submit">Analyze</button>
        </form>
    </div>
 <!-- insta template part -->
    <div class="insta-container">
        <section class="content">
            <div class="user-card2">
                <div class="user-avatar">
                    <img src="https://www.pngmart.com/files/23/Insta-Logo-PNG-File.png" alt="User Avatar">
                </div>
                <div class="user-info">
                    <p class="username"><% if (locals.instagramData) { %>
                        
                        <p>@<%= locals.instagramData.username %></p>
                       
                        <% } %></p>
                </div>
        </section>
        <section class="4-cards">
            <div class="user-card">
                <div class="row">
                    <div class="card">
                        <h2 class="card-heading">Followers</h2>
                        <p class="card-content"><% if (locals.instagramData) { %>
                        
                            <p><%= locals.instagramData.followers %></p>
                            
                            <% } %></p>
                    </div>
                    <div class="card">
                        <h2 class="card-heading">toatl Likes</h2>
                        <p class="card-content">
                            <% if (locals.instagramData) { %>
                        
                                <p><%= locals.instagramData.total_likes %></p>
                              
                                <% } %>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="card">
                        <h2 class="card-heading">total Comments</h2>
                        <p class="card-content"><% if (locals.instagramData) { %>
                        
                            <p><%= locals.instagramData.total_comments %></p>
                            
                            <% } %></p>
                    </div>
                    <div class="card">
                        <h2 class="card-heading">No. of Posts</h2>
                        <p class="card-content"><% if (locals.instagramData) { %>
                        
                            <p><%= locals.instagramData.total_posts %></p>
                           
                            <% } %></p>
                    </div>
                </div>
            </div>
        </section>
        <div class="user-card">
        <h1>ENGAGEMENT RATE</h1>
        
            <h1><% if (locals.instagramData) { %>
                        
                <p><%= locals.instagramData.engagement_rate %></p>
               
                <% } %></h1>
    </div>
        
    </div>
<div class ="youtube-container">
<!-- youtube template part -->
    <div class="insta-container">
        <section class="content">
            <div class="user-card2">
                <div class="user-avatar">
                    <img src="https://cdn.pixabay.com/photo/2021/12/10/16/38/youtube-6860916_1280.png" alt="User Avatar">
                </div>
                <div class="user-info">
                    <p class="username"> <% if (locals.youtubeData) { %>
                        
                        <p> <%= locals.youtubeData.channelName %></p>
                      
                        <% } %></p>
                </div>
        </section>
        <section class="4-cards">
            <div class="user-card">
                <div class="row">
                    <div class="card">
                        <h2 class="card-heading">subscibers</h2>
                        <p class="card-content"><% if (locals.youtubeData) { %>
                        
                            <p> <%= locals.youtubeData.subscribersCount %></p>
                          
                            <% }%></p>
                    </div>
                    <div class="card">
                        <h2 class="card-heading">Avg Likes</h2>
                        <p class="card-content"><% if (locals.youtubeData) { %>
                        
                        <p> <%= locals.youtubeData.averagePostLikes %></p>
                      
                        <% }%></p>
                    </div>
                </div>
                <div class="row">
                    <div class="card">
                        <h2 class="card-heading">Avg Comments</h2>
                        <p class="card-content"><% if (locals.youtubeData) { %>
                        
                        <p> <%= locals.youtubeData.averagePostComments %></p>
                      
                        <% }%></p>
                    </div>
                    <div class="card">
                        <h2 class="card-heading">No. of Posts</h2>
                        <p class="card-content"><% if (locals.youtubeData) { %>
                        
                        <p>: <%= locals.youtubeData.numberOfPosts %></p>
                      
                        <% }%></p>
                    </div>
                </div>
            </div>
        </section>
        <div class="user-card">
        <h1>ENGAGEMENT RATE</h1>
        
            <h1><% if (locals.youtubeData) { %>
                        
                        <p> <%= locals.youtubeData.engagementRate%></p>
                      
                        <% }%></h1>
    </div>
        
    </div>
</div>
</div>
</body>
</html>
