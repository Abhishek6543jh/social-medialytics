            text-align: center;
            font-size: 28px;
            font-weight: bold;
            color: #333;
        }

        /* Toggle Switch Styles */
        .toggle-switch {
            text-align: center;
            margin-top: 20px;
        }

        /* Dark Mode Toggle Styles */
        #dark-mode-toggle {
            display: none;
        }

        .toggle-switch label {
            cursor: pointer;
            background-color: #007bff;
            color: #fff;
            padding: 8px 16px;
            border-radius: 20px;
