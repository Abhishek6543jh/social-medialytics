</head>
<body class="light-mode">
    <div class="main-container">
        <nav class="navbar">
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Services</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
        <div class="toggle-switch">
            <input type="checkbox" id="dark-mode-toggle">
            <label for="dark-mode-toggle">Dark Mode</label>
        </div>
        <div class="usernameandchannelidformcontainer">
            <form method="POST" action="https://socialmediaanlytics.onrender.com/dataobtain">
                <label for="instagramUsername">Instagram Channel Name:</label>
                <input type="text" id="instagramUsername" name="instagramUsername" required placeholder="Instagram @username">

                <label for="youtubeChannelId">YouTube Channel ID:</label>
                <input type="text" id="youtubeChannelId" name="youtubeChannelId" required placeholder="YouTube channel-id">
                <button type="submit">Analyze</button>
                <p id="wait-message" style="display: none;">Please wait for a few minutes...</p>
            </form>
        </div>
        <!-- Container for Instagram and YouTube sections -->
        <div class="sections-container">
            <!-- Instagram Section -->
            <div class="insta-container">
                <section class="content">
                        <h1>Instagram Data</h1>
                        <div class="user-card">
                            <div class="user-avatar">
                                <img src="https://www.pngmart.com/files/23/Insta-Logo-PNG-File.png" alt="User Avatar">
                            </div>
                            <div class="username">
                                <% if (locals.instagramData) { %>
                                    @<%= locals.instagramData.username %>
                                <% } %>
                            </div>
                            <div class="row">
                                <div class="card">
                                    <h2 class="card-heading">Followers</h2>
                                    <p class="card-content">
                                        <% if (locals.instagramData) { %>
                                            <%= locals.instagramData.followers %>
                                        <% } %>
                                    </p>
                                </div>
                                <div class="card">
                                    <h2 class="card-heading">Total Likes</h2>
                                    <p class="card-content">
                                        <% if (locals.instagramData) { %>
                                            <%= locals.instagramData.total_likes %>
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="card">
                                    <h2 class="card-heading">Total Comments</h2>
                                    <p class="card-content">
                                        <% if (locals.instagramData) { %>
                                            <%= locals.instagramData.total_comments %>
                                        <% } %>
                                    </p>
                                </div>
                                <div class="card">
                                    <h2 class="card-heading">No. of Posts</h2>
                                    <p class="card-content">
                                        <% if (locals.instagramData) { %>
                                            <%= locals.instagramData.total_posts %>
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                            <h1>Engagement Rate</h1>
                            <p class = "engagement-rate">
                                <% if (locals.instagramData) { %>
                                    <%= locals.instagramData.engagement_rate %>
                                <% } %>
                            </p>
                        </div>
                    
                </section>
            </div>
            <!-- YouTube Section -->
            <div class="youtube-container">
                <section class="content">
                 
                        <h1>YouTube Data</h1>
                        <div class="user-card">
                            <div class="user-avatar">
                                <img src="https://cdn.pixabay.com/photo/2021/12/10/16/38/youtube-6860916_1280.png" alt="User Avatar">
                            </div>
                            <div class="username">
                                <% if (locals.youtubeData) { %>
                                    <%= locals.youtubeData.channelName %>
                                <% } %>
                            </div>
                            <div class="row">
                                <div class="card">
                                    <h2 class="card-heading">Subscribers</h2>
                                    <p class="card-content">
                                        <% if (locals.youtubeData) { %>
                                            <%= locals.youtubeData.subscribersCount %>
                                        <% } %>
                                    </p>
                                </div>
                                <div class="card">
                                    <h2 class="card-heading">Avg Likes</h2>
                                    <p class="card-content">
                                        <% if (locals.youtubeData) { %>
                                            <%= locals.youtubeData.averagePostLikes %>
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="card">
                                    <h2 class="card-heading">Avg Comments</h2>
                                    <p class="card-content">
                                        <% if (locals.youtubeData) { %>
                                            <%= locals.youtubeData.averagePostComments %>
                                        <% } %>
                                    </p>
                                </div>
                                <div class="card">
                                    <h2 class="card-heading">No. of Posts</h2>
                                    <p class="card-content">
                                        <% if (locals.youtubeData) { %>
                                            <%= locals.youtubeData.numberOfPosts %>
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                            <h1>Engagement Rate</h1>
                            <p class="engagement-rate">
                                <% if (locals.youtubeData) { %>
                                    <%= locals.youtubeData.engagementRate %>
                                <% } %>
                            </p>
                        </div>
                    
                </section>
            </div>
        </div>
    </div>
    <script>
        // Function to toggle between light and dark mode
        function toggleDarkMode() {
            const body = document.body;
            const darkModeToggle = document.getElementById('dark-mode-toggle');

            darkModeToggle.addEventListener('change', () => {
                if (darkModeToggle.checked) {
                    body.classList.add('dark-mode');
                    body.classList.remove('light-mode');
                    localStorage.setItem('theme', 'dark');
                } else {
                    body.classList.add('light-mode');
                    body.classList.remove('dark-mode');
                    localStorage.setItem('theme', 'light');
                }
            });

            // Check the user's preference from the previous session (if any)
            const userPreference = localStorage.getItem('theme');
            if (userPreference === 'dark') {
                darkModeToggle.checked = true;
                body.classList.add('dark-mode');
            } else {
                body.classList.add('light-mode');
            }
        }

        // Call the function to initialize the toggle
        toggleDarkMode();

        // Function to handle form submission
        function handleSubmit() {
            // Show the "Please wait" message
            const waitMessage = document.getElementById('wait-message');
            waitMessage.style.display = 'block';

            // Disable the "Analyze" button to prevent multiple submissions
            const analyzeButton = document.querySelector('form button[type="submit"]');
            analyzeButton.disabled = true;

            // You can continue with the form submission here...
        }

        // Attach the handleSubmit function to the form submission
        const form = document.querySelector('form');
        form.addEventListener('submit', handleSubmit);
    </script>
</body>
