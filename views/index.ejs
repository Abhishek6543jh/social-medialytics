            .sections-container {
                flex-direction: column;
                align-items: center;
            }
            .insta-container, .youtube-container {
                width: 100%;
                margin-top: 10px;
            }
        }
        .insta-container .row,
        .youtube-container .row {
            display: flex; /* Display the cards in a row */
            justify-content: space-between; /* Space them evenly */
        }

        /* Adjust the width of the cards to fit two side by side */
        .insta-container .row .card,
        .youtube-container .row .card {
            flex: 1; /* Make them take equal space */
            max-width: calc(50% - 10px); /* Set the maximum width (minus gap) for each card */
        }
        /* Add styles to the engagement rate paragraph (p1) */
/* Add unique styles to the engagement rate paragraph (p1) */
.engagement-rate {
    font-size: 50px;
    font-weight: bold;
    color: #ff6b6b;
    margin-top: -53px;
    text-transform: uppercase;
    border: 1px solid #ff6b6b;
