}

/* Style the username */
.username {
    font-size: 24px; /* Adjust the font size as needed */
    margin-top: 10px; /* Add space below the image */
}

/* Optional: Add some additional styling */
.user-card2 {
    border: 1px solid #ccc;
    padding: 20px;
