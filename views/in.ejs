    <style>
        /* Light Mode Styles */
        body.light-mode {
            background-color: #fff;
            color: #000;
            
                
        }

        /* Dark Mode Styles */
        body.dark-mode {
            background-color: #0000001b;
            color: #fff;
        }

        /* Add this style to your existing <style> block or create a new one */

        .navbar {
            background-color: #007bff;
            color: #fff;
            padding: 10px 0;
        }

        .navbar ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        .navbar li {
            display: inline;
            margin: 0 20px;
        }

        .navbar a {
            text-decoration: none;
            color: #fff;
            font-weight: bold;
            font-size: 18px;
        }

        .navbar a:hover {
            text-decoration: underline;
        }

        /* Reset some default styles */
        body, html {
            margin: 0;
            padding: 0;
        }

        /* Style the user card container */
        .user-card2 {
            text-align: center;
        }

        /* Style the user avatar (round image) */
        .user-avatar img {
            width: 150px; /* Adjust the image size as needed */
            height: 150px;
            border-radius: 50%; /* Make it round */
        }

        /* Style the username */
        .username {
            font-size: 24px; /* Adjust the font size as needed */
            margin-top: 10px; /* Add space below the image */
        }

        /* Optional: Add some additional styling */
        .user-card2 {
            border: 1px solid #ccc;
            padding: 20px;
            box-shadow: 0 0 10px rgba(37, 35, 169, 0.2);
            max-width: 300px; /* Adjust the card's width as needed */
            margin: 0 auto; /* Center the card on the page */
        }

        .insta-container {
            border: 1px solid;
            padding: 10px;
        }

        .usernameandchanneidformcointainer {
            display: flex;
            margin-right: 20px;
            height: auto;
            justify-content: center;
        }

        .usernameandchanneidformcointainer form {
            background-color: #7f1e1e00;
            padding: 20px;
            border-radius: 0px;
            box-shadow: 0 20px 20px rgb(255 255 255 / 0%);
            text-align: center;
        }

        .usernameandchanneidformcointainer label,
        .usernameandchanneidformcointainer input,
        .usernameandchanneidformcointainer button {
            display: block;
            margin-bottom: 10px;
        }

        .usernameandchanneidformcointainer label {
            font-weight: bold;
        }

        .usernameandchanneidformcointainer input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #18c3b8;
            border-radius: 5px;
            font-size: 16px;
        }

        .usernameandchanneidformcointainer button[type="submit"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .usernameandchanneidformcointainer button[type="submit"]:hover {
            background-color: #0056b3;
        }

        .toggle-switch {
            display: flex;
            align-items: center;
            margin: 10px;
        }

        .toggle-switch input[type="checkbox"] {
            display: none;
        }

        .toggle-switch label {
            cursor: pointer;
            padding: 5px;
            background-color: #ccc;
            border-radius: 20px;
            position: relative;
        }

        .toggle-switch label:before {
            content: "";
            position: absolute;
            width: 20px;
            height: 20px;
            background-color: #fff;
            border-radius: 50%;
            top: 50%;
            transform: translateY(-50%);
            left: 2px;
            transition: 0.2s;
        }

        .toggle-switch input[type="checkbox"]:checked + label {
            background-color: #007bff;
        }

        .toggle-switch input[type="checkbox"]:checked + label:before {
            left: calc(100% - 2px);
        }
    </style>
</head>
